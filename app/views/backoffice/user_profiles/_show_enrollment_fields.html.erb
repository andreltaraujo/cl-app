<div class='nested-fields'>
	<div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
		<div>
			<%= f.label :id, class:"p-2 block text-sm font-medium text-gray-700"%>
			<%= f.text_field :id, readonly: true, class:"w-1/2 sm:w-1/3 rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300" %>
			<%= link_to edit_backoffice_enrollment_path(f.object.id), data: { turbo_frame: "_top" }, class:"edit-link text-cyan-600 hover:text-gray-500 pl-2", id:"edit-link" do %>
				<i class="fas fa-user-edit fa-fw mr-1"></i><span class="text-sm"><%= t('devise.shared.links.edit') %></span>
			<% end %>
		</div>
		<div>
			<%= f.label :created_at, class:"p-2 block text-sm font-medium text-gray-700" %>
			<%= f.text_field :created_at, readonly: true, value: l(f.object.created_at.to_date), class:"w-1/2 rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300" %>
		</div>
		<div>
			<%= f.label :canceled, class:"p-2 block text-sm font-medium text-gray-700" %>
			<%= f.text_field :canceled, readonly: true, value: t('activerecord.attributes.enrollment.cancel', status: f.object.canceled ? t('activerecord.attributes.boolean.true') : t('activerecord.attributes.boolean.false')), class:" replace-field w-1/2 sm:w-1/3 rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300" %>
		</div>
		<div>
			<%= f.label :project_id, class:"p-2 block text-sm text-gray-900" %>
			<%= f.text_field :project_id, readonly: true, value: f.object.project.name, class:"w-full rounded-md px-4 py-1.5 text-gray-900 shadow-md text-sm" %>
		</div>
		<div>
			<%= f.label :ceic_id, class:"p-2 block text-sm text-gray-900"%>
			<%= f.text_field :ceic_id, readonly: true, value: f.object.ceic.slug, class:"replace-field w-1/2 rounded-md px-4 py-1.5 text-gray-900 shadow-md text-sm" %>
		</div>
		<div>
			<%= f.label :classroom_id, class:"p-2 block text-sm text-gray-900" %>
			<%= f.text_field :classroom_id, readonly: true, value: f.object.classroom.schedule.strftime('%H:%M'), class:"replace-field w-1/2 rounded-md px-4 py-1.5 text-gray-900 shadow-md text-sm" %>
		</div>
	</div>
</div>
