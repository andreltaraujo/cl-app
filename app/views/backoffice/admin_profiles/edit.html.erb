<div class="flex flex-col justify-center m-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="text-2xl text-center text-gray-900 font-bold"><%= t('devise.registrations.edit.title', resource: @admin_profile.model_name.human) %></div>
			<%= render "backoffice/admin_profiles/error_messages", resource: @admin_profile %>
			<%= form_with model: [:backoffice, @admin_profile], html: { method: :put, class:"bg-gray-50 shadow-lg rounded-md p-8 my-4" } do |f| %>
				<%= f.label :name, class:"p-4 text-sm font-medium text-gray-900" %>
				<%= f.text_field :name, class:"mb-4 w-full rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300 sm:text-sm" %>	
				<%= f.label :email, class:"p-4 text-sm font-medium text-gray-900"%>
				<%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mb-4 w-full rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300 sm:text-sm" %>
				<div class="field">
					<%= f.label :password, class:"p-4 text-sm font-medium text-gray-900" %> <i class="text-sm">(leaveeeee blank if you don't want to change it)</i>
					<%= f.password_field :password, autocomplete: "new-password", class:"mb-4 w-full rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300 sm:text-sm" %>
					<% if @minimum_password_length %>
						<em><%= @minimum_password_length %> characters minimum</em>
					<% end %>
				</div>

				<div class="field">
					<%= f.label :password_confirmation, class:"p-4 text-sm font-medium text-gray-900" %>
					<%= f.password_field :password_confirmation, autocomplete: "new-password", class:"mb-4 w-full rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300 sm:text-sm" %>
				</div>

				<div class="field">
					<%= f.label :current_password, class:"p-4 text-sm font-medium text-gray-900" %><i class="text-sm"><%= t('devise.registrations.edit.we_need_your_current_password_to_confirm_your_changes') %></i>
					<%= f.password_field :current_password, autocomplete: "current-password", class:"mb-4 w-full rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300 sm:text-sm" %>
				</div>

				<div class="actions">
					<%= f.submit t('devise.registrations.edit.update'), class:"mt-4 px-4 justify-center rounded-md bg-sky-600 py-2 text-sm font-semibold text-white hover:bg-sky-700" %>
				</div>
			<% end %>
			<div class="flex flex-wrap justify-center mt-8 text-sm font-medium text-gray-900">
				<%= link_to t('devise.shared.links.back'), :back %>
			</div>
		</div>
	</div>
</div>
