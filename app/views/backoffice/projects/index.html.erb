<!--Container-->
<div class="px-4 mb-8 text-gray-800">
	<div class="p-5">
		<!--Table Card-->
		<div class="bg-white border rounded shadow">
			<div class="flex flex-wrap">
				<div class="w-1/2 border-b p-3 text-lg font-bold uppercase text-gray-600">
					<%= @projects.model_name.human(count: 2) %>
				</div>
				<div class="w-1/2 border-b p-3 text-lg font-bold text-gray-600">
					<div class="text-sm float-right">
						<%= link_to new_backoffice_project_path, class:"text-cyan-600 hover:text-gray-500" do %>
							<i class="fas fa-project-diagram mr-1"></i><span class="text-sm"><%= t('devise.registrations.new.sign_up', resource: @projects.model_name.human) %></span>
						<% end %>
					</div>
				</div>
			</div>
			<div class="p-5">
				<div class="overflow-x-auto">
					<div class="table w-full text-gray-700">
						<div class="table-header-group">
							<div class="table-row font-bold text-left text-blue-900">
								<% %w[id name slug created_at].each do |attribute| %>
									<% if @projects.first.attributes.key?(attribute) %>
										<div class="table-cell px-4"><%= i18n_attributes(@projects, attribute) %></div>
									<% end %>
								<% end %>
							</div>
						</div>
						<div class="table-row-group">
							<% @projects.each do |project| %>
								<a href="<%= backoffice_project_path(project) %>" class="table-row hover:bg-gray-100">
									<div class="table-cell px-4 py-2"><%= project.id %></div>
									<div class="table-cell px-4 py-2 whitespace-nowrap"><%= project.name%></div>
									<div class="table-cell px-4 py-2"><%= project.slug%></div>
									<div class="table-cell px-4 py-2"><%= l(project.created_at.to_date) %></div>
								</a>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!--/table Card-->
	</div>
	<!--/ Console Content-->
</div>

