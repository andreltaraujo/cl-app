<div class="text-2xl text-center text-gray-900 font-bold"><%= @enrollment.model_name.human %></div>
<%= form_with model: [:backoffice, @enrollment], html: { class:"max-w-5xl mx-auto bg-gray-50 shadow-lg rounded-md p-8 my-4" }, id:"enroll-form" do |f| %>
	<div class="grid grid-cols-1 sm:grid-cols-3 gap-4 whitespace-nowrap">
		<div>
			<%= f.label :id, class:"p-2 block text-sm font-medium text-gray-700"%>
			<%= f.text_field :id, class:"w-1/2 sm:w-1/3 rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300" %>
		</div>
		<div>
			<%= f.label :created_at, class:"p-2 block text-sm font-medium text-gray-700" %>
			<%= f.text_field :created_at, value: l(@enrollment.created_at.to_date), class:"w-1/2 rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300" %>
		</div>
		<div>
			<%= f.label :canceled, class:"p-2 block text-sm font-medium text-gray-700" %>
			<%= f.text_field :canceled, value: t('activerecord.attributes.enrollment.cancel', status: @enrollment.canceled ? t('activerecord.attributes.boolean.true') : t('activerecord.attributes.boolean.false')), class:"w-1/2 sm:w-1/3 rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300" %>
		</div>	
		<div>	
			<%= f.label :project_id, class:"p-2 block text-sm font-medium text-gray-700" %>
			<%= f.text_field :project_id, value: @enrollment.project.name, class:"w-full rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300" %>
		</div>
		<div>
			<%= f.label :ceic_id, class:"p-2 block text-sm font-medium text-gray-700" %>
			<%= f.text_field :ceic_id, value: @enrollment.ceic.slug, class:"ceic-field w-1/2 rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300" %>
		</div>
		<div>
			<%= f.label :classroom_id, class:"p-2 block text-sm font-medium text-gray-700" %>
			<%= f.text_field :classroom_id, value: @enrollment.classroom.schedule.strftime('%H:%M'), class:"w-1/2 sm:w-1/3 rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300" %>
		</div>
	</div>
	<div class="mt-4">
		<%= link_to t('devise.shared.links.edit'), edit_backoffice_enrollment_path(@enrollment), class:"bg-lime-500 hover:bg-lime-200 border border-1 rounded-lg py-2 px-4 text-sm text-white uppercase font-bold" %>
	<%= link_to t('devise.shared.links.back'), :back, class:"mt-4 bg-cyan-600	hover:bg-lime-200 border border-1 rounded-lg py-2 px-4 text-sm text-white uppercase font-bold" %>

	</div>
<% end %>
<script>
	$(document).ready(function() {
		const form = document.getElementById('enroll-form');
		const inputFields = form.querySelectorAll('input');
		inputFields.forEach(function(inputField){
			$(inputField).prop('readonly', true);
		});
	});
</script>