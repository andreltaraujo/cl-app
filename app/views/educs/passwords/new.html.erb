<div class="flex flex-col justify-center m-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="text-2xl text-center text-gray-900 font-bold"><%= t("devise.passwords.new.forgot_your_password") %></div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"bg-gray-50 shadow-lg rounded-md p-8 my-4" }) do |f| %>
    <%= render "shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class:"p-4 text-sm font-medium text-gray-900" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", **input_options %>
    </div>

    <div class="actions">
      <%= f.submit t("devise.passwords.new.send_me_reset_password_instructions"), class:"mt-4 px-4 w-full justify-center rounded-md bg-sky-600 py-2 text-sm font-semibold text-white hover:bg-sky-700" %>
    </div>
    <% end %>
    <div class="flex flex-wrap justify-center mt-8 text-sm font-medium text-gray-900">
      <%= render "shared/links" %>
    </div>
  </div>
</div>
