<div class="flex flex-col justify-center m-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="text-2xl text-center text-gray-900 font-bold"><%= "#{t("devise.sessions.new.sign_in")} em sua conta" %></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class:"bg-gray-50 shadow-lg rounded-md p-8 my-4" }) do |f| %>
      <%= f.label :email, class:"p-4 text-sm font-medium text-gray-900" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mb-4 w-full rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300 sm:text-sm" %>
      <%= f.label :password, class:"p-4 text-sm font-medium text-gray-900" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"mb-4 w-full rounded-md px-4 py-1.5 text-gray-900 shadow-md ring-2 ring-gray-300 sm:text-sm" %>
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class:"text-sm font-medium text-gray-900" %>
      <% end %>
      <%= f.submit t("devise.sessions.new.sign_in"), class:"mt-4 w-full justify-center rounded-md bg-sky-600 py-2 text-sm font-semibold text-white hover:bg-sky-700" %>
    <% end %>
    <div class="flex flex-wrap justify-center text-sm font-medium text-gray-900">
      <%= render "shared/links" %>
    </div>
  </div>
</div>
